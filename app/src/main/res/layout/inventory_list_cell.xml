<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/inventoryListCellImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="Inventory icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/inventoryListCellTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inventoryListCellTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        app:layout_constraintBottom_toTopOf="@id/inventoryListCellSubTitle"
        app:layout_constraintEnd_toStartOf="@id/inventoryListCellActionImage"
        app:layout_constraintStart_toEndOf="@id/inventoryListCellImage"
        app:layout_constraintTop_toTopOf="@id/inventoryListCellImage" />

    <TextView
        android:id="@+id/inventoryListCellSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="World"
        app:layout_constraintBottom_toBottomOf="@id/inventoryListCellImage"
        app:layout_constraintEnd_toStartOf="@id/inventoryListCellActionImage"
        app:layout_constraintStart_toEndOf="@id/inventoryListCellImage"
        app:layout_constraintTop_toBottomOf="@id/inventoryListCellTitle" />

    <ImageView
        android:id="@+id/inventoryListCellActionImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="@id/inventoryListCellImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/inventoryListCellTitle"
        app:layout_constraintTop_toTopOf="@id/inventoryListCellImage" />


</androidx.constraintlayout.widget.ConstraintLayout>